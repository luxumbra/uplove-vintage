---
import Icon from "astro-icon";
import Pagefind from "./Pagefind.astro";
---

<div id="nav-links" class="nav-links collapsed font-overpass-mono capitalize" >
  <a class="fade-effect" href="/"><Icon name="mdi:home" class="w-6 h-6"/> Home</a>
  <a class="fade-effect" href="" ><Icon name="mdi:email" class="w-6 h-6"/> Contact</a>
  <a class="fade-effect" href=""><Icon name="mdi:etsy" class="w-6 h-6"/> Etsy</a>
  <a class="fade-effect" href=""><Icon name="mdi:instagram" class="w-6 h-6"/> Instagram</a>
  <a class="fade-effect" href=""><Icon name="mdi:facebook" class="w-6 h-6"/> Facebook</a>
  <a class="fade-effect" href=""><Icon name="mdi:pinterest" class="w-6 h-6"/> Pinterest</a>
  <!-- <a href="/tags/">Tags</a> -->
  <Pagefind class="fade-effect" />
  <slot />
</div>
<style>
  /* nav styles */
  .nav-links {
    position: absolute;
    width: 300px;
    height: auto;
    right: -100%;
    padding: 10px;
    transition: opacity 0.2s ease-in-out;
    opacity: 0;
    z-index: 10;
    pointer-events: none;
  }
  .nav-links.collapsed {
    right: 0;
    opacity: 0;
    top: 45px;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  }

  .nav-links.open {
    border-radius: 10px;
    right: 0;
    top: 45px;
    opacity: 1;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    pointer-events: auto;
  }

  .nav-links a {
    display: flex;
    align-items: center;
    gap: 4px;
    line-height: 50px;
    padding-left: 30px;
    box-sizing: border-box;
    font-size: 18px;
    text-decoration: none;
    height: auto;
  }

  html.dark .nav-links {
    background: rgb(34, 33, 37);
  }

  html:not(.dark) .nav-links {
    background: rgb(245, 245, 245);
  }
  .fade-effect {
    transition: opacity 0.5s ease-in-out;
    opacity: 1;
  }

  .fade-effect:hover {
    opacity: 0.5;
  }
  .nav-search {
    display: flex;
    align-items: center;
    padding: 10px;
    width: 100%; /* make the search box take up the whole width */
  }
</style>