---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { getImage, Image } from "astro:assets";

import logoImg from '../images/logo.png';

const { is404Page = false } = Astro.props; // Get the prop from Astro.props

const favicon_avif = await getImage({
  src: "https://cdn.erfianugrah.com/ea_favicon.png",
  alt: "favicon",
  // inferSize: true,
  width: "400",
  height: "400",
  decoding: "async",
  format: "avif"
});
---

<header class="z-50 px-2 md:px-5 w-full flex fixed inset-0 bottom-auto h-5 md:h-16 backdrop-blur-md bg-white/5 shadow-lg shadow-black/5">
  <nav
    class="flex items-center justify-between w-full h-full relative align-center"
  >
    {
      !is404Page && (
        <div class="">
          <a href="/">
            <img
              class="favicon w-11 md:w-14"
              src={logoImg.src}
              alt="Home"
              width="88"
              height="88"
            />
          </a>
        </div>
      )
    }
    <!-- {
      !is404Page && (
        <div class="absolute right-[55px] -mb-[5px]">
          <ThemeIcon />
        </div>
      )
    } -->
    {
      !is404Page && (
        <div class="-mt-[3px]">
          <Hamburger />
        </div>
      )
    }
    {
      !is404Page && (
        <div class="absolute right-0">
          <Navigation />
        </div>
      )
    }
  </nav>
  <slot />
</header>
